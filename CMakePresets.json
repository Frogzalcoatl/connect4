{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "windows-msvc",
            "displayName": "Windows (MSVC)",
            "description": "Visual Studio 2022",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "windows-clang-cl-vs",
            "displayName": "Windows (Clang-CL VS2022)",
            "description": "Clang via Visual Studio Project (Requires VS Component)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Visual Studio 17 2022",
            "toolset": "ClangCL"
        },
        {
            "name": "windows-clang-cl-ninja",
            "displayName": "Windows (Clang-CL Ninja)",
            "description": "Clang via Ninja (Requires clang-cl in PATH)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        },
        {
            "name": "windows-mingw",
            "displayName": "Windows (MinGW GCC)",
            "description": "GCC via MinGW (Multi-Config)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        },
        {
            "name": "linux-gcc",
            "displayName": "Linux (GCC)",
            "description": "GCC (Multi-Config)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        },
        {
            "name": "linux-clang",
            "displayName": "Linux (Clang)",
            "description": "Clang (Multi-Config)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        },
        {
            "name": "macos-clang",
            "displayName": "macOS (Clang/Ninja)",
            "description": "High performance Ninja Multi-Config build",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        },
        {
            "name": "macos-xcode",
            "displayName": "macOS (Xcode)",
            "description": "Generate Xcode project",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generator": "Xcode"
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-debug",
            "displayName": "MSVC Debug",
            "configurePreset": "windows-msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "displayName": "MSVC Release",
            "configurePreset": "windows-msvc",
            "configuration": "Release"
        },
        {
            "name": "clang-vs-debug",
            "displayName": "Clang VS Debug",
            "configurePreset": "windows-clang-cl-vs",
            "configuration": "Debug"
        },
        {
            "name": "clang-vs-release",
            "displayName": "Clang VS Release",
            "configurePreset": "windows-clang-cl-vs",
            "configuration": "Release"
        },
        {
            "name": "clang-ninja-debug",
            "displayName": "Clang Ninja Debug",
            "configurePreset": "windows-clang-cl-ninja",
            "configuration": "Debug"
        },
        {
            "name": "clang-ninja-release",
            "displayName": "Clang Ninja Release",
            "configurePreset": "windows-clang-cl-ninja",
            "configuration": "Release"
        },
        {
            "name": "mingw-debug",
            "displayName": "MinGW Debug",
            "configurePreset": "windows-mingw",
            "configuration": "Debug"
        },
        {
            "name": "mingw-release",
            "displayName": "MinGW Release",
            "configurePreset": "windows-mingw",
            "configuration": "Release"
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GCC Debug",
            "configurePreset": "linux-gcc",
            "configuration": "Debug"
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux GCC Release",
            "configurePreset": "linux-gcc",
            "configuration": "Release"
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux Clang Debug",
            "configurePreset": "linux-clang",
            "configuration": "Debug"
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux Clang Release",
            "configurePreset": "linux-clang",
            "configuration": "Release"
        },
        {
            "name": "macos-clang-debug",
            "displayName": "macOS Ninja Debug",
            "configurePreset": "macos-clang",
            "configuration": "Debug"
        },
        {
            "name": "macos-clang-release",
            "displayName": "macOS Ninja Release",
            "configurePreset": "macos-clang",
            "configuration": "Release"
        },
        {
            "name": "xcode-debug",
            "displayName": "Xcode Debug",
            "configurePreset": "macos-xcode",
            "configuration": "Debug"
        },
        {
            "name": "xcode-release",
            "displayName": "Xcode Release",
            "configurePreset": "macos-xcode",
            "configuration": "Release"
        }
    ]
}